<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shape with a gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#001F3F"
                android:endColor="#311B92"
                android:type="linear"
                android:angle="45" />
        </shape>
    </item>

    <!-- Add any other items (e.g., stroke, corner radius) as needed -->
    <item android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/> <!-- Transparent color -->
            <corners android:radius="8dp"/> <!-- Adjust the corner radius as needed -->
            <!-- Stroke color (adjust as needed) -->
        </shape>
    </item>

</layer-list>
